<h1>Active Storage PDF Viewer</h1>

<% if @announcement.doc.representable? %>
    <%= image_tag @announcement.doc.representation(resize_to_limit: [600, 600]) %>
<% else %>
    <%= link_to rails_blob_path(@announcement.doc, disposition: "attachment") do %>
        NOT REPRESENTABLE - (Dowload File)
    <% end %>
<% end %>

<hr />
<% if @announcement.doc.previewable? %>
<%= image_tag @announcement.doc.preview(resize_to_limit: [600, 600]) %>
<% else %>
    NO PREVIEW AVAILABLE
<% end %>

<hr />
